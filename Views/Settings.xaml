<UserControl
    x:Class="LLC_MOD_Toolbox.Views.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:LLC_MOD_Toolbox.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="/Fonts/#Source Han Sans CN"
    FontWeight="Medium"
    mc:Ignorable="d">

    <Grid x:Name="SettingsPage">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="切换节点"
            FontSize="22"
            Foreground="#FFFFEED4" />

        <ComboBox
            x:Name="NodeCombobox"
            Grid.Row="0"
            Grid.Column="1"
            d:SelectedIndex="0"
            DisplayMemberPath="Name"
            FontSize="16"
            Foreground="Black"
            ItemsSource="{Binding DownloadNodeList}"
            SelectedItem="{Binding DownloadNode, Mode=TwoWay}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="切换API节点"
            FontFamily="/Fonts/#Source Han Sans CN"
            FontSize="22"
            FontWeight="Medium"
            Foreground="#FFFFEED4" />
        <ComboBox
            x:Name="APICombobox"
            Grid.Row="1"
            Grid.Column="1"
            Height="37"
            VerticalAlignment="Bottom"
            DisplayMemberPath="Name"
            FontSize="16"
            Foreground="Black"
            ItemsSource="{Binding ApiNodeList}"
            SelectedItem="{Binding ApiNode, Mode=TwoWay}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="卸载模组"
            FontFamily="/Fonts/#Source Han Sans CN"
            FontSize="22"
            FontWeight="Medium"
            Foreground="#FFFFEED4" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Command="{Binding ModUnistallationCommand}"
            Content="卸载"
            Foreground="Black" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            Content="游戏位置"
            FontSize="22"
            Foreground="#FFFFEED4" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            d:Content="我不到啊"
            Background="White"
            Command="{Binding SelectLimbusCompanyPathCommand}"
            Content="{Binding LimbusCompanyPath, TargetNullValue='未设置游戏路径'}"
            FontSize="16"
            Foreground="Black" />
    </Grid>

</UserControl>
